{
  "name": "report-mate",
  "version": "0.1.0",
  "private": true,
  "description": "초등 평어 도우미 - 생활기록부 평어 자동 생성 (Next.js, Supabase, shadcn/ui, Zustand, xlsx)",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > src/types/database.gen.ts",
    "db:migrate": "supabase db push",
    "seed:templates": "node scripts/seed-templates.mjs",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy:cf": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf:pages:deploy": "npx wrangler pages deploy ./out --project-name=grade-helper",
    "cf:check": "npx wrangler check",
    "cf:types": "npx wrangler types"
  },
  "dependencies": {
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.45.4",
    "openai": "^4.104.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.16.5",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.18",
    "next": "^15.5.12",
    "typescript": "^5.6.3",
    "wrangler": "^3.93.0"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
